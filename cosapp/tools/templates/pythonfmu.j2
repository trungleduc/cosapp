    def setup_experiment(self, start_time):
        self.__start_time = start_time
        self.__driver.time_interval = (start_time, start_time + 1e300)
        self.__master.drivers.clear()
        self.__master.add_driver(self.__driver)

        System._System__master_set = True
        BasePort.set_type_checking(False)
        self.__master.open_loops()

        # Add the drivers
        has_iterative = {% if local %}True{% else %}not self.__master.assembled_problem().is_empty(){% endif %}

        self.__driver.children.clear()
        if has_iterative:
            solver = self.__driver.add_child(NonLinearSolver('solver'))  {# TODO, {% for key, value in nl_options.items() %}{{key}}={{option}},{% endfor %})) #}

